<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lynxz.org.kotlinapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hello_dialog"
            style="@style/common_red_btn"
            android:text="Hello dialog"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_anko_demo"
            style="@style/common_red_btn"
            android:text="anko demo"/>

        <TextView
            android:id="@+id/tv_jpush_demo"
            style="@style/common_red_btn"
            android:text="Jpush demo"/>

        <TextView
            android:id="@+id/tv_scan"
            style="@style/common_red_btn"
            android:text="barScanner公司所用库"/>

        <TextView
            android:id="@+id/tv_scan_zxing"
            style="@style/common_red_btn"
            android:text="barScannerZxing"/>

        <TextView
            android:id="@+id/tv_retrofit"
            style="@style/common_red_btn"
            android:text="retrofit示例"/>

        <TextView
            android:id="@+id/tv_butterknife"
            style="@style/common_red_btn"
            android:text="butterknife_kotlin"/>

        <TextView
            android:id="@+id/tv_textureview_livecamera"
            style="@style/common_red_btn"
            android:text="textureview_demo"/>

        <TextView
            android:id="@+id/tv_bluetoothh"
            style="@style/common_red_btn"
            android:text="bluetooth"/>

        <TextView
            android:id="@+id/tv_animation_demo"
            style="@style/common_red_btn"
            android:text="animation demo"/>

        <TextView
            android:id="@+id/tv_bluetooth_low_energy"
            style="@style/common_red_btn"
            android:text="bluetooth_low_energy"/>

        <TextView
            android:id="@+id/tv_webview"
            style="@style/common_red_btn"
            android:text="webview start app"/>

        <TextView
            android:id="@+id/tv_navigation_view"
            style="@style/common_red_btn"
            android:text="navigation view"/>

        <TextView
            android:id="@+id/tv_baz_view"
            style="@style/common_red_btn"
            android:text="baz view"/>

        <TextView
            android:id="@+id/tv_pop_window"
            style="@style/common_red_btn"
            android:text="pop window"/>


        <android.support.design.widget.TabLayout
            android:id="@+id/tl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#cdcdcdcd"
            android:visibility="gone"
            app:tabIndicatorColor="#f00"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@android:color/holo_blue_bright"
            app:tabTextColor="@android:color/holo_red_dark"/>
    </LinearLayout>
</ScrollView>
